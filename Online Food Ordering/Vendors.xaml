<UserControl x:Class="Online_Food_Ordering.Vendors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Online_Food_Ordering"
             
             mc:Ignorable="d"
             Background="White" d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <StackPanel Width="350" Margin="20" Grid.Column="0" Grid.Row="0">
            <Label FontSize="18" FontWeight="Bold" Content="Add Venders" />
            <Label   Content="Name" />
            <TextBox Height="23"  TextWrapping="Wrap" Text=""/>

            <Label   Content="CNIC" />
            <TextBox Height="23"  TextWrapping="Wrap" Text=""/>

            <Label   Content="Phone Number" />
            <TextBox Height="23"  TextWrapping="Wrap" Text=""/>

            <Label  Content="Location" />
            <TextBox Height="23" Margin="5" TextWrapping="Wrap" Text=""/>

            <Button Content="Add" Margin="5" />

        </StackPanel>


    </Grid>
</UserControl>
